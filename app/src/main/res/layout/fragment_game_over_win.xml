<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameOverWinFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="205dp"
        android:layout_height="173dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="100dp"
        android:src="@drawable/baseline_celebration_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCongrats"
        android:layout_width="279dp"
        android:layout_height="37dp"
        android:layout_marginStart="113dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="100dp"
        android:text="C O N G R A T U L A T I O N S !"
        android:textAlignment="center"
        android:textColor="#BACC0C"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/buttonPlayAgain"
        android:layout_width="139dp"
        android:layout_height="52dp"
        android:layout_marginTop="100dp"
        android:text="PLAY AGAIN"
        android:backgroundTint="@color/design_default_color_secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCongrats" />

</androidx.constraintlayout.widget.ConstraintLayout>